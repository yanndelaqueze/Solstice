<h1 class= "title">Nouveau Produit</h1>
    <%= link_to :back do %>
      <i class="fa-solid fa-circle-arrow-left fs-5"></i>
    <% end %>
<div class="container">
  <%= form_with(model: @product, url: products_path, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :name, "Nom du produit" %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :description, "Description" %>
      <%= form.text_area :description, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :min_price, "Prix Minimum" %>
      <%= form.number_field :min_price %>
    </div>
    <div class="form-group">
      <%= form.label :available, "Disponible ?" %>
      <%= form.check_box :available %>
    </div>
    <div class="form-group">
      <%= form.label :order, "Position" %>
      <%= form.number_field :order %>
    </div>
    <div class="form-group">
      <%= form.label :category_id %>
      <%= form.collection_select :category_id, @categories, :id, :name, prompt: 'Select a category' %>
    </div>
    <div class="form-group">
      <%= form.label :photos %>
      <%= form.file_field :photos, as: :file, input_html: { multiple: true } %>
    </div>
    <div class="actions">
      <%= form.submit "CrÃ©er", class:"btn btn-action" %>
    </div>
  <% end %>
</div>
