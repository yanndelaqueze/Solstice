<h1 class= "title">Nouveau Produit</h1>
    <%= link_to :back do %>
      <i class="fa-solid fa-circle-arrow-left fs-5"></i>
    <% end %>
<div class="container">
  <!-- Case 1 / Category ID is in the params -->
  <% if params[:category_id] %>
    <%= form_for(@product, remote: true, html: { multipart: true }) do |f| %>
      <div class="form-group">
        <%= f.label :name, "Nom du produit" %>
        <br>
        <%= f.text_field :name, class: 'form-control'  %>
      </div>
      <div class="form-group">
        <%= f.label :description, "Description" %>
        <br>
        <%= f.text_area :description, class: 'form-control'  %>
      </div>
      <div class="form-group">
        <%= f.label :min_price, "Prix minimum" %>
        <%= f.number_field :min_price %>
      </div>
      <div class="form-group">
        <%= f.label :available, "Disponible ?" %>
        <%= f.check_box :available%>
      </div>
      <div class="form-group">
        <%= f.label :order, "Position" %>
        <%= f.number_field :order%>
      </div>
      <div class="form-group">
        <%= f.submit "Créer", class:"btn btn-action" %>
      </div>
    <% end %>
  <!-- Case 2 / Category ID is NOT in the params -->
  <% else %>
    <%= form_with(model: @product, url: products_path, local: true) do |form| %>
      <div class="form-group">
        <%= form.label :name, "Nom du produit" %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :description, "Description" %>
        <%= form.text_area :description, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :min_price, "Prix Minimum" %>
        <%= form.number_field :min_price %>
      </div>
      <div class="form-group">
        <%= form.label :available, "Disponible ?" %>
        <%= form.check_box :available %>
      </div>
      <div class="form-group">
        <%= form.label :order, "Position" %>
        <%= form.number_field :order %>
      </div>
      <div class="form-group">
        <%= form.label :category_id %>
        <%= form.collection_select :category_id, @categories, :id, :name, prompt: 'Select a category' %>
      </div>
      <div class="actions">
        <%= form.submit "Créer", class:"btn btn-action" %>
      </div>
    <% end %>
  <% end %>
</div>
