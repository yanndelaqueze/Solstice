<h1 class= "title">Mes Cr√©ations</h1>
<div class="container">
  <div class="row">
      <% @categories.each do |category| %>
          <div class="col-12 category-header" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= category.photo.attached? ? cl_image_path(category.photo.key) : image_path('banner_solstice.jpg')%>')">
            <h1 class="category-name"><%= category.name %></h1>
         </div>
        <div class="product-container">
        <% category.products.each do |product| %>
            <%= render 'card_product', product: product%>
        <% end %>
        </div>
      <% end %>
  </div>
</div>
