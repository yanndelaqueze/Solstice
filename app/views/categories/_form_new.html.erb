<%= form_for(@category) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :order %>
    <%= f.number_field :order, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit 'Create Category', class: 'btn btn-primary' %>
  </div>
<% end %>
